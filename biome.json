{
  "$schema": "https://biomejs.dev/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useTemplate": "off",
        "useNodejsImportProtocol": "off",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {},
            "patterns": [
              {
                "group": ["../*", "../**"],
                "message": "Use path alias (@/...) instead of relative parent imports."
              }
            ]
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noConfusingVoidType": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "off"
      }
    }
  }
}
