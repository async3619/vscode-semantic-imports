      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "esbuild",
        "source": "esbuild",
        "pattern": {
          "regexp": "^âœ˜ \\[ERROR\\] (.+)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
